
{{#partial "content"}}
   <div class="container">
       <h2>Animal sighting form</h2>
    <form action="" method="post" class="app">
        <div class="form">
            <label for ="name"> Animal Name</label>
            <input type="text"  style="margin-bottom: 30px;" name="name" required>
        </div>
        <div class="form">
            <label for ="location"> Location</label>
            <select class="location">
                <option>-Select-</option>
                <option value="north">Zone A</option>
                <option value="north-east">NE Quadrant</option>
                <option value="south">Near the River </option>
            </select>
        </div>
        <div class="form">
            <label for ="health"> Health</label>
            <select class="health">
                <option>-Select-</option>
                <option value="healthy">Healthy</option>
                <option value="ill">Ill</option>
                <option value="okay">Okay</option>
            </select>
        </div>
        <div class="form">
            <label for ="age"> Age</label>
            <select class="age">
                <option>-Select-</option>
                <option value="newborn">Newborn</option>
                <option value="young">Young</option>
                <option value="adult">Adult</option>
            </select>
        </div>
        <div class="form">
            <label for ="age"> Age</label>
            <select class="age">
                <option>-Select-</option>
                <option value="newborn">Newborn</option>
                <option value="young">Young</option>
                <option value="adult">Adult</option>
            </select>
        </div>
        <div class="form">
            <label for ="danger">Danger</label>
            <select class="danger">
                <option>-Select-</option>
                <option value="endangered">Endangered</option>
                <option value="young">Not Endangered</option>
            </select>
        </div>
        <div class="form">
            <label for ="weakness"> Hero Weakness </label>
            <input type="text"  style="margin-bottom: 30px;" name="weakness" required>
        </div>

        <br>
        <br>
        <button type="submit" class="btn btn-info">Add new Hero </button>
    </form>
   </div>
{{/partial}}

